

<div class="card margin-cards" style="width: 18rem;">

  <div class="all-beers-container">
    <img src="{{this.image_url}}" class="card-img beers-img-proportion" alt="{{this.name}} image">
  </div>

  <div class="card-body">

    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <p class="card-text">{{this.tagline}}</p>

  </div>

</div>